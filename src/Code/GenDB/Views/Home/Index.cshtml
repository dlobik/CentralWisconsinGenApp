<script type="text/javascript">
    $(function () {
        $('#dialog').dialog({
            autoOpen: false,
            width: 400,
            height: 800,
            resizable: false,
            title: 'Terms of Service Agreement',
            modal: true,
            open: function(event, ui) {
                //Load the TOSPopUP action which will return
                // the partial view _TOSPopUp
                $(this).load("@Url.Action("_TOSPopUp")");
            },
            buttons: {
                "Close": function () {
                    $(this).dialog("close");
                }
            }
        });
        $('#TOS-link').click(function () {
            $('#dialog').dialog('open');
        });
    });
</script>
<div id="dialog" title="Terms of Service Agreement" style="overflow: scroll;">
   
