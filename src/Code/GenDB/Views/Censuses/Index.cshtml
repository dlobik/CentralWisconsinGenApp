@model IEnumerable<GenDB.Models.Census>

@{
    ViewBag.Title = "Index";
}

<h2>Censuses</h2>

<table class="table">
    <tr>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Age
        </th>
        <th>
            Date of Record
        </th>
        <th>
            Page
        </th>
        <th>
            Town
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Age)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateOfRecord)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Page)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Town)
        </td>
        <td>
            @using (Html.BeginForm("Details", "Obits", FormMethod.Get))
            {
                <button type="submit"> Add to Cart</button>
            }
        </td>
    </tr>
}

</table>
