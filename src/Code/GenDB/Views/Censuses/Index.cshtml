@model IEnumerable<GenDB.Models.Census>

@{
    ViewBag.Title = "Index";
}

<table class="table">
    <tr>
        <th>
            First Name
            @*@Html.DisplayNameFor(model => model.FirstName)*@
        </th>
        <th>
            Last Name
            @*@Html.DisplayNameFor(model => model.LastName)*@
        </th>
        <th>
            Age
            @*@Html.DisplayNameFor(model => model.Age)*@
        </th>
        <th>
            Date of Record
            @*@Html.DisplayNameFor(model => model.DateOfRecord)*@
        </th>
        <th>
            Page
            @*@Html.DisplayNameFor(model => model.Page)*@
        </th>
        <th>
            Town
            @*@Html.DisplayNameFor(model => model.Town)*@
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Age)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateOfRecord)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Page)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Town)
        </td>
        <td>
            @using (Html.BeginForm("Details", "Obits", FormMethod.Get))
            {
                <button type="submit"> Add to Cart</button>
            }
        </td>
    </tr>
}

</table>
