@model IEnumerable<GenDB.Models.Naturalization>

@{
    ViewBag.Title = "Index";
}

<h2>Naturalizations</h2>

<table class="table">
    <tr>
        <th>
            First Name
        </th>
        <th>
           Last Name
        </th>
        <th>
            DOB
        </th>
        <th>
            Age
        </th>
        <th>
            Date of Record
        </th>
        <th>
            Record Type
        </th>
        <th>
            Country of Origin
        </th>
        <th>
            Series
        </th>
        <th>
            Box
        </th>
        <th>
            Folder
        </th>
        <th>
            Volume Number
        </th>
        <th>
            Page Cert Number
        </th>
        <th>
            Date of Entry
        </th>
        <th>
            Port of Entry
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DOB)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Age)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateOfRecord)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RecordType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CountryOfOrigin)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Series)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Box)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Folder)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VolNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PageCertNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateOfEntry)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PortOfEntry)
        </td>
        <td>
            @using (Html.BeginForm("Details", "Obits", FormMethod.Get))
            {
                <button type="submit"> Add to Cart</button>
            }
        </td>
    </tr>
}

</table>
