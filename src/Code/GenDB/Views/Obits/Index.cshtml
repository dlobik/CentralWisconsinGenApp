@foreach (var item in Model)
{
    <table class="table">
        <tr>
            <td>
                <table class="table-striped">
                    <tr>
                        <td>Last Name:</td>
                        <td>@item.LastName</td>
                    </tr>
                    <tr>
                        <td>First Name:</td>
                        <td>@item.FirstName</td>
                    </tr>
                    <tr>
                        <td>Alternate Name:</td>
                        <td>@item.AltName</td>
                    </tr>
                </table>
            </td>
            <td>
                <table class="table-striped">
                    <tr>
                        <td>Date of Record:</td>
                        <td>@item.DateOfRecord</td>
                    </tr>
                    <tr>
                        <td>Age:</td>
                        <td>@item.Age</td>
                    </tr>
                    <tr>
                        <td>County Filed:</td>
                        <td>@item.CountyID</td>
                    </tr>
                </table>
            </td>
            <td>
                <table class="table-striped">
                    <td>
                        @using (Html.BeginForm("Details", "Obits", FormMethod.Get))
                        {
                            <button type="button" id="WTPopUp">Web Text</button>
                        }
                    </td>



                </table>
            </td>
            <td>
                <table>
                    <tr>
                        <td>
                            @using (Html.BeginForm("Details", "Obits", FormMethod.Get))
                            {
                                <button type="submit">Add to Cart</button>
                            }
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>

}




