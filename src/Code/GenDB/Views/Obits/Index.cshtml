@using PagedList;

@using PagedList.Mvc;

@model IPagedList<GenDB.Models.Obit>

@{
    ViewBag.Title = "Obituaries";
}

<link href="@Url.Content("~/Content/themes/base/jquery-ui.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-ui-1.8.24.min.js")" type="text/javascript"></script>

<h2>Obituaries</h2>

<br />


@using (Html.BeginForm("Index", "Obits", FormMethod.Get))
{
    //implementing search options
    <b> Search Option: </b>@Html.RadioButton("option", "Lname") <text>Last Name</text> @Html.RadioButton("option", "Fname") <text> First Name </text>
    @Html.RadioButton("option", "Altname")<text>Alt Name</text> @Html.TextBox("search") <input type="submit"
                                                                                              name="submit"
                                                                                              value="Search" />
}

@Html.PagedListPager(Model, pageNumber => Url.Action("Index", new
{
    pageNumber
}))


<div id="tabs">

    <ul>
        <li><a href="#tabs-1">Obituaries</a></li>
        <li><a href="#tabs-2">Naturalizations</a></li>
        <li><a href="#tabs-3">Censuses</a></li>
    </ul>

    <div id="tabs-1">
        <table class="table">
            <tr>
                <th>
                    First Name
                    @*@Html.DisplayNameFor(model => model.FirstName)*@
                </th>
                @*<th>
                        @Html.DisplayNameFor(model => model.MiddleName)
                    </th>*@
                <th>
                    Last Name
                    @*@Html.DisplayNameFor(model => model.LastName)*@
                </th>
                <th>
                    Alternate Name
                    @*@Html.DisplayNameFor(model => model.AltName)*@
                </th>
                <th>
                    Date of Record
                    @*@Html.DisplayNameFor(model => model.DateOfRecord)*@
                </th>
                <th>
                    Birth Date
                    @*@Html.DisplayNameFor(model => model.BirthDate)*@
                </th>
                <th>
                    Age
                    @*@Html.DisplayNameFor(model => model.Age)*@
                </th>
                <th>
                    Web Text
                    @*@Html.DisplayNameFor(model => model.WebText)*@
                </th>
                <th></th>
            </tr>
        
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    @*<td>
                    @Html.DisplayFor(modelItem => item.MiddleName)
                </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AltName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfRecord)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BirthDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Age)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WebText)
                    </td>
                    <td>
                   @using (Html.BeginForm("Details", "Obits", FormMethod.Get))
                   {
                       <button type="submit"> Add to Cart</button>
                   }
                </td>
                </tr>
            }
    </table>
    </div>

    <div id="tabs-2">
        @Html.Action("Index", "Naturalizations")
        @*@Html.Partial("_Nat", new List<GenDB.Models.Naturalization>())*@
    </div>

    <div id="tabs-3">
        @Html.Action("Index", "Censuses")
    </div>
       
</div>
@if (Model.Count() == 0)
{
    <tr>
        <td colspan="3"> Records not found </td>
    </tr>
}



<script type="text/javascript">
    $(function () {
        $("#tabs").tabs();
    });
</script>