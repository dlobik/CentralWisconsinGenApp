@model IEnumerable<GenDB.Models.Naturalization>

@{
    ViewBag.Title = "Search";
}
@Styles.Render("~/Content/dataTables")


<h2>Naturalizations</h2>
<br />


<table id="table_nat" class="table table-striped table-bordered responsive" style="width:100%">
    <thead>
        <tr>
            <th class="all">
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th class="all">
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th class="all">
                @Html.DisplayNameFor(model => model.DOB)
            </th>
            <th class="all">
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th class="all">
                @Html.DisplayNameFor(model => model.DateOfRecord)
            </th>
            <th class="none">
                @Html.DisplayNameFor(model => model.RecordType)
            </th>
            <th class="all">
                @Html.DisplayNameFor(model => model.CountyID)
            </th>
            <th class="all">
                @Html.DisplayNameFor(model => model.CountryOfOrigin)
            </th>
            <th class="none">
                @Html.DisplayNameFor(model => model.Series)
            </th>
            <th class="none">
                @Html.DisplayNameFor(model => model.Box)
            </th>
            <th class="none">
                @Html.DisplayNameFor(model => model.Folder)
            </th>
            <th class="none">
                @Html.DisplayNameFor(model => model.VolNumber)
            </th>
            <th class="none">
                @Html.DisplayNameFor(model => model.PageCertNumber)
            </th>
            <th class="all">
                @Html.DisplayNameFor(model => model.DateOfEntry)
            </th>
            <th class="all">
                @Html.DisplayNameFor(model => model.PortOfEntry)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DOB)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfRecord)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RecordType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Counties.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CountryOfOrigin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Series)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Box)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Folder)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VolNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PageCertNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfEntry)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PortOfEntry)
                </td>
                <td>
                    @using (Html.BeginForm("Details", "Naturalization", FormMethod.Get))
                    {
                        <button type="submit">Add to Cart</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts {

    @Scripts.Render("~/bundles/dataTables")

    <script type="text/javascript">

        $(document).ready(function () {
            $('#table_nat').dataTable({
                "language": {
                    "search": "Filter:"
                }
            });
        })

    </script>

}

